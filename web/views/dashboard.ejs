                <% } %>
              </div>
              <div class="db-rh-info">
                <span class="db-rh-guild"><%= h.guild_name || 'Serveur inconnu' %></span>
                <span class="db-rh-meta">
                  ğŸ‘¥ <%= h.player_count || '?' %>
                  Â· ğŸ“… <%= h.day_count || 0 %>j
                  <% if (h.duration_seconds) { %>Â· â±ï¸ <%= Math.floor(h.duration_seconds / 60) %>min<% } %>
                </span>
              </div>
              <div class="db-rh-date">
                <%= h.ended_at ? new Date(h.ended_at).toLocaleDateString('fr-FR', { day: 'numeric', month: 'short' }) : '' %>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>

    <!-- Quick Links -->
