<script>
  // Collapsible toggle
  document.addEventListener('click', function(e) {
    var header = e.target.closest('.dw-collapse-head');
    if (!header) return;
    var collapsible = header.parentElement;
    if (collapsible) collapsible.classList.toggle('open');
  });

  // Sidebar nav click â†’ smooth scroll to anchor
  document.querySelectorAll('.dw-nav-link[href^="#"]').forEach(function(link) {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      var id = this.getAttribute('href').substring(1);
      var target = document.getElementById(id);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        history.replaceState(null, '', '#' + id);
      }
    });
  });

  // Sidebar active tracking on scroll
  (function() {
    var links = document.querySelectorAll('.dw-nav-link');
    var sections = [];
    links.forEach(function(link) {
      var href = link.getAttribute('href');
      if (href && href.startsWith('#')) {
        var sec = document.getElementById(href.substring(1));
        if (sec) sections.push({ el: sec, link: link });
      }
    });

    function onScroll() {
      var scrollY = window.scrollY + 120;
      var active = null;
      sections.forEach(function(s) {
        if (s.el.getBoundingClientRect().top + window.scrollY <= scrollY) active = s;
      });
      links.forEach(function(l) { l.classList.remove('active'); });
      if (active) active.link.classList.add('active');
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  })();
</script>

