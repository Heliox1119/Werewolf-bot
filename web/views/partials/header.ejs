<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> â€” Werewolf Bot</title>
  <meta name="description" content="Werewolf Bot â€” Real-time Discord game dashboard">
  <meta name="theme-color" content="#080b14">
  <link rel="icon" href="/static/img/roles/LG.jpg" type="image/jpeg">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <!-- Left Sidebar (Discord-style) -->
  <aside class="app-sidebar" id="app-sidebar">
    <!-- Brand -->
    <a href="/" class="sidebar-brand" title="Werewolf Bot">
      <img src="/static/img/roles/LG.jpg" alt="Werewolf" class="sidebar-logo">
    </a>
    <div class="sidebar-sep"></div>

    <!-- Guild Icons -->
    <div class="sidebar-guilds" id="sidebar-guilds">
      <% if (typeof userGuilds !== 'undefined' && userGuilds.length > 0) { %>
        <% userGuilds.forEach(function(g) { %>
          <a href="/guild/<%= g.id %>" class="sidebar-guild" title="<%= g.name %>" data-guild-id="<%= g.id %>">
            <% if (g.icon) { %>
              <img src="<%= g.icon %>" alt="<%= g.name %>" class="sidebar-guild-img">
            <% } else { %>
              <span class="sidebar-guild-initial"><%= g.name ? g.name.charAt(0).toUpperCase() : '?' %></span>
            <% } %>
          </a>
        <% }); %>
      <% } else { %>
        <a href="/auth/discord" class="sidebar-guild sidebar-guild-add" title="Login to see your servers">
          <span class="sidebar-guild-initial">+</span>
        </a>
      <% } %>
    </div>
    <div class="sidebar-sep"></div>

    <!-- Navigation -->
    <nav class="sidebar-nav">
      <a href="/" class="sidebar-nav-item<%= title === 'Dashboard' ? ' active' : '' %>" title="Dashboard" data-i18n-title="nav.dashboard">
        <span class="sidebar-nav-icon">&#127968;</span>
        <span class="sidebar-nav-label" data-i18n="nav.dashboard">Dashboard</span>
      </a>
      <a href="/monitoring" class="sidebar-nav-item<%= title === 'Monitoring' ? ' active' : '' %>" title="Monitoring" data-i18n-title="nav.monitoring">
        <span class="sidebar-nav-icon">&#128202;</span>
        <span class="sidebar-nav-label" data-i18n="nav.monitoring">Monitoring</span>
      </a>
      <a href="/roles" class="sidebar-nav-item<%= title === 'Roles Editor' ? ' active' : '' %>" title="Roles" data-i18n-title="nav.roles">
        <span class="sidebar-nav-icon">&#128058;</span>
        <span class="sidebar-nav-label" data-i18n="nav.roles">Roles</span>
      </a>
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/moderation" class="sidebar-nav-item<%= title === 'Moderation' ? ' active' : '' %>" title="Moderation" data-i18n-title="nav.moderation">
          <span class="sidebar-nav-icon">&#128737;</span>
          <span class="sidebar-nav-label" data-i18n="nav.moderation">Moderation</span>
        </a>
      <% } %>
    </nav>

    <!-- Bottom: Lang + User -->
    <div class="sidebar-bottom">
      <button class="sidebar-nav-item" id="lang-toggle" title="Switch language">
        <span class="sidebar-nav-icon" id="lang-flag">ðŸ‡¬ðŸ‡§</span>
        <span class="sidebar-nav-label" id="lang-label">EN</span>
      </button>
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/auth/logout" class="sidebar-nav-item sidebar-user-item" title="<%= user.username %> â€” Logout" data-i18n-title="nav.logout">
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=32" alt="" class="sidebar-user-avatar">
          <span class="sidebar-nav-label"><%= user.username %></span>
        </a>
      <% } else { %>
        <a href="/auth/discord" class="sidebar-nav-item" title="Login with Discord">
          <span class="sidebar-nav-icon">&#128274;</span>
          <span class="sidebar-nav-label" data-i18n="nav.login">Login</span>
        </a>
      <% } %>
    </div>
  </aside>

  <!-- Mobile topbar -->
  <header class="app-topbar" id="app-topbar">
    <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Menu">&#9776;</button>
    <a href="/" class="topbar-brand">
      <img src="/static/img/roles/LG.jpg" alt="Werewolf" class="topbar-logo">
      <span class="topbar-title"><%= typeof botName !== 'undefined' && botName ? botName : 'Werewolf' %></span>
      <span class="nav-version">v3.0</span>
    </a>
    <div class="topbar-right">
      <% if (typeof user !== 'undefined' && user) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=32" alt="" class="topbar-avatar">
      <% } %>
    </div>
  </header>

  <!-- Main content wrapper -->
  <div class="app-main" id="app-main">
    <main class="main-content">
