<div class="roles-page">
  <div class="page-header">
    <div>
      <h1>Roles</h1>
      <p class="text-muted">All game roles &mdash; built-in and custom</p>
    </div>
  </div>

  <!-- Built-in Roles -->
  <section class="section">
    <h2 class="section-title">Built-in Roles</h2>
    <div class="roles-grid">
      <% builtIn.forEach(function(r) {
        var imgFile = roleImageMap[r.id];
        var camp = campMap[r.id] || 'village';
        var displayName = roleNameMap[r.id] || r.name;
        var desc = roleDescMap[r.id] || '';
      %>
        <div class="role-card role-card-<%= camp %>">
          <% if (imgFile) { %>
            <img src="/static/img/roles/<%= imgFile %>" alt="<%= displayName %>" class="role-img" loading="lazy">
          <% } else { %>
            <span class="role-emoji">&#128058;</span>
          <% } %>
          <span class="role-name"><%= displayName %></span>
          <span class="role-camp camp-<%= camp %>"><%= camp === 'wolves' ? 'Loups' : camp === 'solo' ? 'Solo' : 'Village' %></span>
          <% if (desc) { %><span class="role-desc"><%= desc %></span><% } %>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- Custom Roles -->
  <section class="section">
    <h2 class="section-title">Custom Roles</h2>
    <% if (customRoles.length === 0) { %>
      <div class="empty-state">
        <span class="empty-icon">&#127912;</span>
        <p>No custom roles created yet</p>
        <% if (isAdmin) { %>
          <p class="text-muted">Use the form below to create one</p>
        <% } else { %>
          <p class="text-muted">Login as a server admin to create custom roles</p>
        <% } %>
      </div>
    <% } else { %>
      <div class="roles-grid">
        <% customRoles.forEach(function(r) { %>
          <div class="role-card role-card-<%= r.camp || 'village' %>">
            <span class="role-emoji"><%= r.emoji || '&#10067;' %></span>
            <span class="role-name"><%= r.name %></span>
            <span class="role-camp camp-<%= r.camp %>"><%= r.camp %></span>
            <% if (r.description) { %><span class="role-desc"><%= r.description %></span><% } %>
            <% if (isAdmin) { %>
              <button class="btn btn-sm btn-danger delete-role" data-role-id="<%= r.id %>" style="margin-top: 0.75rem;">Delete</button>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } %>

    <% if (isAdmin) { %>
      <div class="panel create-role-panel">
        <h3 class="panel-title">Create Custom Role</h3>
        <form id="create-role-form" class="role-form">
          <div class="form-row">
            <div class="form-group">
              <label>Name</label>
              <input type="text" name="name" required placeholder="e.g. Blacksmith" class="form-input">
            </div>
            <div class="form-group">
              <label>Emoji</label>
              <input type="text" name="emoji" placeholder="&#9935;" maxlength="4" class="form-input form-input-sm">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Camp</label>
              <select name="camp" class="form-select">
                <option value="village">Village</option>
                <option value="wolves">Loups</option>
                <option value="solo">Solo</option>
              </select>
            </div>
            <div class="form-group">
              <label>Power</label>
              <select name="power" class="form-select">
                <option value="none">None (Passive)</option>
                <option value="see">See (like Seer)</option>
                <option value="protect">Protect (like Guard)</option>
                <option value="kill">Kill (like Hunter)</option>
                <option value="heal">Heal (like Witch)</option>
                <option value="custom">Custom</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea name="description" placeholder="Describe the role's abilities..." class="form-input" rows="2"></textarea>
          </div>
          <div class="form-group">
            <label>Guild ID</label>
            <input type="text" name="guildId" required placeholder="Server ID" class="form-input">
          </div>
          <button type="submit" class="btn btn-primary">Create Role</button>
        </form>
      </div>
    <% } %>
  </section>
</div>

<script src="/static/js/roles.js"></script>
<%- include('partials/footer') %>
